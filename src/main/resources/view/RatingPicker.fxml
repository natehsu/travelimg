<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<fx:root fx:id="root" styleClass="rating-picker" stylesheets="@style.css" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">

    <fx:define>
        <ToggleGroup fx:id="toggleGroup"/>
    </fx:define>
    <ToggleButton fx:id="badButton" styleClass="bad" toggleGroup="$toggleGroup">
        <graphic>
            <FontAwesomeIconView glyphName="THUMBS_DOWN"/>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="neutralButton" styleClass="neutral" toggleGroup="$toggleGroup">
        <graphic>
            <FontAwesomeIconView glyphName="CHECK"/>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="goodButton" styleClass="good" toggleGroup="$toggleGroup">
        <graphic>
            <FontAwesomeIconView glyphName="HEART"/>
        </graphic>
    </ToggleButton>
</fx:root>
