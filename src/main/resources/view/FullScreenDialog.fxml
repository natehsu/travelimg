<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="root" type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/8" maxWidth="Infinity" maxHeight="Infinity">
    <children>
        <ImageView fx:id="imageView"/>

        <Group fx:id="bottomBar">
            <children>
                <HBox>
                    <children>
                        <Button fx:id="bt_previous" onAction="#bt_previousPressed">
                            <graphic>
                                <FontAwesomeIconView glyphName="ARROW_LEFT"/>
                            </graphic>
                        </Button>
                        <VBox fx:id="ratingContainer"></VBox>
                        <Button fx:id="bt_next" onAction="#bt_nextPressed">
                            <graphic>
                                <FontAwesomeIconView glyphName="ARROW_RIGHT"/>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </Group>
    </children>
</fx:root>
