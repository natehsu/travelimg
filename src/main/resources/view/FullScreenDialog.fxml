<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="root" type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/8" maxWidth="Infinity" maxHeight="Infinity"
        style="-fx-background-color: black">
    <children>
        <HBox fx:id="bottomBar" maxHeight="Infinity" maxWidth="Infinity" alignment="BOTTOM_CENTER">
            <children>
                <Button fx:id="bt_previous" onAction="#bt_previousPressed">
                    <graphic>
                        <FontAwesomeIconView glyphName="ARROW_LEFT"/>
                    </graphic>
                </Button>
                <VBox fx:id="ratingContainer"></VBox>
                <Button fx:id="bt_next" onAction="#bt_nextPressed">
                    <graphic>
                        <FontAwesomeIconView glyphName="ARROW_RIGHT"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</fx:root>
