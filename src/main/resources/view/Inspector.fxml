<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<InspectorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefWidth="280.0" styleClass="inspector"
            stylesheets="@style.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="at.ac.tuwien.qse.sepm.gui.controller.impl.PhotoInspectorImpl">
    <children>
        <RatingPicker fx:id="ratingPicker"/>
        <VBox fx:id="mapContainer" styleClass="map" maxHeight="200.0"/>
        <VBox>
            <padding>
                <Insets right="16" left="16" top="16" bottom="16"/>
            </padding>
            <children>
                <VBox fx:id="tagSelectionContainer">
                    <VBox.margin>
                        <Insets bottom="5"/>
                    </VBox.margin>
                </VBox>
                <!--TableView fx:id="exifTable" prefWidth="Infinity" prefHeight="260">
                    <columns>
                        <TableColumn fx:id="exifName" prefWidth="100.0" text="Name"/>
                        <TableColumn fx:id="exifValue" prefWidth="135.0" text="Wert"/>
                    </columns>
                </TableView-->

                <VBox>
                    <children>
                        <Label text="Zu Präsentation hinzufügen:"/>
                        <HBox>
                            <children>
                                <ComboBox fx:id="slideshowsCombobox" />

                            </children>
                        </HBox>
                    </children>
                    <Button fx:id="addToSlideshowButton">
                        <graphic>
                            <FontAwesomeIconView glyphName="PLUS"></FontAwesomeIconView>
                        </graphic>
                    </Button>
                </VBox>
            </children>
        </VBox>
    </children>
</InspectorPane>
