<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="root" styleClass="dialog" stylesheets="@style.css"
         type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/8">
    <children>
        <BorderPane prefWidth="460.0">
            <top>
                <Label fx:id="descriptionLabel" maxWidth="Infinity" wrapText="true" styleClass="header"/>
            </top>
            <bottom>
                <BorderPane maxWidth="Infinity" styleClass="footer">
                    <right>
                        <HBox spacing="8.0">
                            <children>
                                <Button fx:id="cancelButton" alignment="CENTER_RIGHT" text="Nein"/>
                                <Button fx:id="confirmButton" alignment="CENTER_RIGHT" styleClass="primary" text="Ja"/>
                            </children>
                        </HBox>
                    </right>
                </BorderPane>
            </bottom>
        </BorderPane>
    </children>
</fx:root>
