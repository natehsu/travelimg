<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefWidth="240.0" styleClass="organizer"
            stylesheets="@style.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="at.ac.tuwien.qse.sepm.gui.controller.impl.SlideshowOrganizerImpl">
    <top>
        <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" fitToWidth="true" fitToHeight="true">
            <ListView fx:id="slideshowList">
            </ListView>
        </ScrollPane>
    </top>
    <center>
    <VBox prefHeight="70">
        <children>
            <TextField fx:id="slideshowNameTextField"/>
            <RadioButton fx:id="shortDurationButton" layoutX="71.0" layoutY="300.0" mnemonicParsing="false" text=" 5 sec" />
            <RadioButton fx:id="mediumDurationButton" layoutX="72.0" layoutY="329.0" mnemonicParsing="false" text="10 sec" />
            <RadioButton fx:id="longDurationButton" layoutX="72.0" layoutY="357.0" mnemonicParsing="false" text="15 sec" />
        </children>
    </VBox>
    </center>
    <bottom>
        <HBox prefHeight="40.0" styleClass="navbar">
            <children>
                <Button fx:id="importButton" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIconView glyphName="Add"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="TODO"/>
                    </tooltip>
                </Button>
                <Button fx:id="presentButton" maxHeight="Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIconView glyphName="EXPAND"/>
                    </graphic>
                    <tooltip>
                        <Tooltip text="TODO"/>
                    </tooltip>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
