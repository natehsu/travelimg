<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="root" styleClass="dialog" stylesheets="@style.css"
         type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/8">
    <children>
        <BorderPane prefWidth="320.0">
            <top>
                <Label fx:id="headerText" maxWidth="Infinity" text="HEADER TEXT" styleClass="header"
                       BorderPane.alignment="CENTER"/>
            </top>
            <center>
                <HBox maxHeight="Infinity" maxWidth="Infinity" styleClass="body">
                    <children>
                        <Label fx:id="contentText" text="CONTENT TEXT" wrapText="true"
                               BorderPane.alignment="CENTER"/>
                    </children>
                </HBox>
            </center>
            <bottom>
                <HBox fx:id="actionBar" maxWidth="Infinity" alignment="CENTER_RIGHT"
                      styleClass="footer">
                    <children>
                        <Button fx:id="cancelButton" cancelButton="true" text="OK"/>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</fx:root>
