<?xml version="1.0" encoding="UTF-8"?>

<?import at.ac.tuwien.qse.sepm.gui.control.JourneyPlaceList?>
<?import at.ac.tuwien.qse.sepm.gui.control.TravelRouteMap?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="root" stylesheets="@/view/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.qse.sepm.gui.HighlightsViewController">
    <left>
        <JourneyPlaceList fx:id="journeyPlaceList"/>
    </left>
    <center>
        <VBox spacing="2.0">
            <children>
                <HBox>
                    <children>
                        <HBox fx:id="wikipediaInfoPaneContainer" prefWidth="250"/>
                        <HBox spacing="2.0">
                            <children>
                                <VBox fx:id="tagheartContainer" spacing="2.0">
                                    <children>
                                        <Button fx:id="tag5" text="Tag5" prefHeight="200" prefWidth="300"></Button>
                                        <Button fx:id="good" prefHeight="200" prefWidth="300" styleClass="good" onAction="#bt_heartPress">
                                            <tooltip>
                                                <Tooltip text="Gutes Foto"/>
                                            </tooltip>
                                            <graphic>
                                                <FontAwesomeIconView glyphName="HEART" scaleX="6" scaleY="6"/>
                                            </graphic>
                                        </Button>
                                    </children>
                                </VBox>
                                <TravelRouteMap fx:id="travelRouteMap" prefHeight="400" prefWidth="600"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox fx:id="tagContainer" maxHeight="300.0">
                    <children>
                        <HBox fx:id="firstFourTagsHBox" spacing="2.0">
                            <children>
                                <Button fx:id="tag1" text="Tag1" prefHeight="200" prefWidth="300" ></Button>
                                <Button fx:id="tag2" text="Tag2" prefHeight="200" prefWidth="300" ></Button>
                                <Button fx:id="tag3" text="Tag3" prefHeight="200" prefWidth="300" ></Button>
                                <Button fx:id="tag4" text="Tag4" prefHeight="200" prefWidth="300" ></Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

</BorderPane>
