<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root stylesheets="@style.css" type="javafx.scene.layout.BorderPane" prefWidth="160.0" styleClass="organizer"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <ListView maxWidth="Infinity" maxHeight="Infinity" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox prefHeight="56.0" styleClass="navbar">
            <children>
                <Button fx:id="importButton" maxHeight="Infinity" maxWidth="Infinity"
                        styleClass="import" HBox.hgrow="ALWAYS">
                    <graphic>
                        <Label maxHeight="Infinity" maxWidth="Infinity"/>
                    </graphic>
                </Button>
                <Button fx:id="presentButton" maxHeight="Infinity" maxWidth="Infinity"
                        styleClass="present" HBox.hgrow="ALWAYS">
                    <graphic>
                        <Label maxHeight="Infinity" maxWidth="Infinity"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </bottom>
</fx:root>
