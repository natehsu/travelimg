<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<BorderPane fx:id="root" stylesheets="@style.css" prefWidth="160.0" styleClass="organizer"
         xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.tuwien.qse.sepm.gui.Organizer">
    <center>
        <ListView fx:id="monthList" maxWidth="Infinity" maxHeight="Infinity" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox prefHeight="40.0" styleClass="navbar">
            <children>
                <Button fx:id="importButton" maxHeight="Infinity" maxWidth="Infinity"
                        styleClass="import" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIconView/>
                    </graphic>
                </Button>
                <Button fx:id="presentButton" maxHeight="Infinity" maxWidth="Infinity"
                        styleClass="present" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIconView/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
